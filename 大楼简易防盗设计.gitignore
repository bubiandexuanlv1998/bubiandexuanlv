#include <Adafruit_NeoPixel.h>  Adafruit_NeoPixel strip = Adafruit_NeoPixel(1, 6, NEO_GRB + NEO_KHZ800); long item; #define BuzzerPin2 2  void setup() {   strip.begin();   strip.show();   item = 0; }  void loop() {   if (digitalRead(4)) {     item = 1;    } else {     item = 2;    }   if (item == 1) {     strip.setPixelColor(1-1, 51,255,51);     strip.show();    }   if (item == 2) {     if (!digitalRead(0)) {       delay(100);       tone(BuzzerPin2,800);       delay(10);       noTone(BuzzerPin2);       delay(10);       strip.setPixelColor(1-1, 255,0,0);       strip.show();       delay(10);       strip.setPixelColor(1-1, 0,0,0);       strip.show();       delay(10);      } else {       delay(100);       strip.setPixelColor(1-1, 255,0,0);       strip.show();      }    }  } 
